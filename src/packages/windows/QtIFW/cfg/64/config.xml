<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>eyeCU</Name>
    <Version>2.0.0.20181017</Version>
    <Title>eyeCU</Title>
    <Publisher>Road Works Software</Publisher>
    <StartMenuDir>eyeCU</StartMenuDir>
    <InstallerWindowIcon>eyecu</InstallerWindowIcon>
    <InstallerApplicationIcon>eyecu</InstallerApplicationIcon>
    <MaintenanceToolName>maintain</MaintenanceToolName>
    <RunProgram>@TargetDir@/eyecu.exe</RunProgram>
    <Logo>logo.png</Logo>
    <Watermark>watermark.png</Watermark>
    <TargetDir>@HomeDir@/Road Works Software/eyecu</TargetDir>
    <AdminTargetDir>@ApplicationsDir@/Road Works Software/eyecu</AdminTargetDir>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <ControlScript>controlscript.js</ControlScript>
    <RemoteRepositories>
      <Repository>
        <Url>http://www.eyecu.ru/repository.x64</Url>
        <Enabled>1</Enabled>
        <DisplayName>eyeCU online repository</DisplayName>
      </Repository>
      <Repository>
        <Url>http://www.eyecu.ru/repository.emoji</Url>
        <Enabled>1</Enabled>
        <DisplayName>Emoji online repository</DisplayName>
      </Repository>
    </RemoteRepositories>
</Installer>